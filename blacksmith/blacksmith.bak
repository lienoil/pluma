#!/usr/bin/env php
<?php
require_once dirname(__DIR__).'/bootstrap/autoload.php';

/**
 * ----------------------------------------------
 * Blacksmith
 * ----------------------------------------------
 * Created because I wasn't able to run Artisan
 * separate from Laravel (T_T)
 *
 */

use Blacksmith\Console\Kernel;
use Pluma\Application\Application;
use Symfony\Component\Console\Application as ConsoleApplication;

$name = "<info>Blacksmith</info>, because I wasn't able to run Artisan separate from Laravel (T_T)";
$version = '0.0.1';

/**
 * Console Application
 *
 * @var Application
 */

$console = new ConsoleApplication($name, $version);
$app = require dirname(__DIR__).'/bootstrap/app.php';

$kernel = new Kernel($console, $app, dirname(__DIR__));
$kernel->run();

$console->run();
