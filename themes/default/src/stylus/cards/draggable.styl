.sortable {
    &-handle {
        cursor: move;
    }

    &-container {
        display: block;
        width: 100%;
        min-height: 80px;
        background-color: rgba(0,0,0,0.01);

        .sortable-ghost {
            opacity: 0.1 !important;
        }

        .sortable-fallback {
            opacity: 1 !important;
        }
    }

    &-chosen {
        -webkit-user-drag: none;
        background-color: rgba(255,255,255,0.05);
    }

}
