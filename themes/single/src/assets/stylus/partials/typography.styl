.font-size {
  for i in (2..40) {
    &-{i} {
      zoom: (i * 0.01) + 1;
      -moz-transform: scale(i * 0.1 + 1);
      -webkit-transform-origin: 0 0;
         -moz-transform-origin: 0 0 !important;
              transform-origin: 0 0;
    }
  }

  &-1 {
    zoom: 1;
    -moz-transform: scale(1);
    -moz-transform-origin: 0 0;
  }

  &--1 {
    zoom: 0.8;
    -moz-transform: scale(0.8);
    -moz-transform-origin: 0 0;
  }
}
