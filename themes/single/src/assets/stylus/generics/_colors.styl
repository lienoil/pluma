$text-emphasis-medium = {
  light: rgba(#000, 60%),
  dark: rgba(#fff, 60%),
}

.theme--dark {
  .emphasis {
    &--medium {
      background-color: $text-emphasis-medium.dark !important;
    }
  }

  .text-emphasis {
    &--medium {
      color: $text-emphasis-medium.dark !important;
    }
  }
}

.theme--light {
  .emphasis {
    &--medium {
      background-color: $text-emphasis-medium.light !important;
    }
  }

  .text-emphasis {
    &--medium {
      color: $text-emphasis-medium.light !important;
    }
  }
}

.theme--dark {
  .primary--text[class*=active] {
    color: lighten($theme.primary, 30%) !important;
  }
}
