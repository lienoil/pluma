[v-cloak] {
  display: none;
}

.image-transparent {
  background-color: #fff;
  background-image: linear-gradient(45deg, #efefef 25%, transparent 25%, transparent 75%, #efefef 75%, #efefef),
                    linear-gradient(45deg, #efefef 25%, transparent 25%, transparent 75%, #efefef 75%, #efefef);
  background-position: 0 0,10px 10px;
  background-size: 21px 21px;
  background-repeat: repeat;
}

.draggable-handle {
  cursor: move;
}

.pos-sticky,
.sticky {
  position: -webkit-sticky !important;
  position: sticky !important;
  top: 0;
  z-index: 4;
}

.theme--dark .vertical-divider {
  height: 100%;
  width: 1px;
  background-color: rgba(0,0,0,0.12);
}

.divider {
  &.vertical {
    display: block;
    flex: none;
    height: 60%;
    width: 1px;
    margin: auto 1em;
  }
}

aside,
div:not(.application--wrap) {
  &::-webkit-scrollbar {
    width: 4px;
  }
  &::-webkit-scrollbar-track {
    background: rgba(255,255,255,0.2);
    border: none;
    width: 2px;
  }
  &::-webkit-scrollbar-thumb {
    background: rgba(0,0,0,0.1);
    border-radius: 3px;
    width: 2px;
  }
  &::-webkit-scrollbar-thumb:hover {
    background: rgba(0,0,0,0.2);
  }
}

// Misc
.ov {
  &-auto {
    overflow: auto;
    position relative;
    &:after {
      content: '';
      height: 200px;
      bottom: 0;
      left: 0;
      background-color red;
      position absolute;
    }
  }
}
