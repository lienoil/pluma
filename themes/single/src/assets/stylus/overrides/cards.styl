.card {
  &--bordered {
    border: 1px solid $grey.lighten-2;
    border-radius: 5px;
  }

  &--shadow {
    box-shadow: 0 2px 6px 0 rgba(0,0,0,0.1) !important;
  }

  &__title {
    font-family: $primary-font-family;
    font-weight: bold;
    font-size: $font-size.base;
  }

  &__title,
  &__text {
    padding: $padding.large;
  }

  &__actions {
    padding: ($padding.large - $padding.mini);
  }
}


