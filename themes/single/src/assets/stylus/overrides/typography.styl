.text--ellipsis {
  display: -webkit-box;
  max-width: 100%;
  line-height: 1.4;
  /* autoprefixer: off */
  -webkit-box-orient: vertical;
     -moz-box-orient:  vertical;
          box-orient:   vertical;
  /* autoprefixer: on */
  -webkit-line-clamp: 3;
    line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.text--lowercase {
  text-transform: lowercase !important;
}

.text--uppercase {
  text-transform: uppercase !important;
}

.text--capitalize {
  text-transform: capitalize !important;
}
